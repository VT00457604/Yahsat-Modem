<?xml version='1.0' encoding='utf-8'?>
<widget id="com.techM.YahsatRetail" version="1.0.30" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Yahsat</name>
    <description>
        Yahsat plans to introduce a new High Throughput Satellite (HTS) services.
    </description>
    <author email="VT00457604@techmahindra.com" href="">
        Vijay TechM Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <preference name="android-usesCleartextTraffic" value="true" />
	<allow-intent href="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="orientation" value="portrait" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="splashscreen" value="screen" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="splashScreenDelay" value="5000" />
    <preference name="StatusBarOverlaysWebView" value="true" />
    <preference name="StatusBarBackgroundColor" value="#000000" />
    <preference name="StatusBarStyle" value="lightcontent" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="/www/img/icons/android/48.png" />
        <icon density="mdpi" src="/www/img/icons/android/72.png" />
        <icon density="hdpi" src="/www/img/icons/android/96.png" />
        <icon density="xhdpi" src="/www/img/icons/android/144.png" />
        <splash density="land-hdpi" src="/www/img/splash/android/1280x800.png" />
        <splash density="land-ldpi" src="/www/img/splash/android/1280x800.png" />
        <splash density="land-mdpi" src="/www/img/splash/android/1280x800.png" />
        <splash density="land-xhdpi" src="/www/img/splash/android/1280x800.png" />
        <splash density="port-hdpi" src="/www/img/splash/android/320x640.png" />
        <splash density="port-ldpi" src="/www/img/splash/android/320x640.png" />
        <splash density="port-mdpi" src="/www/img/splash/android/640x1136.png" />
        <splash density="port-xhdpi" src="/www/img/splash/android/640x1136.png" />
        <preference name="AndroidLaunchMode" value="singleInstance" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon height="180" src="www/img/icons/ios/Icon-60-3x.png" width="180" />
        <icon height="60" src="www/img/icons/ios/icon-60.png" width="60" />
        <icon height="120" src="www/img/icons/ios/Icon-60-2x.png" width="120" />
        <icon height="76" src="www/img/icons/ios/Icon-76.png" width="76" />
        <icon height="152" src="www/img/icons/ios/Icon-76-2x.png" width="152" />
        <icon height="40" src="www/img/icons/ios/Icon-Small-40.png" width="40" />
        <icon height="80" src="www/img/icons/ios/Icon-Small-40-2x.png" width="80" />
        <icon height="57" src="www/img/icons/ios/Icon.png" width="57" />
        <icon height="114" src="www/img/icons/ios/Icon-2x.png" width="114" />
        <icon height="72" src="www/img/icons/ios/Icon-72.png" width="72" />
        <icon height="144" src="www/img/icons/ios/Icon-72-2x.png" width="144" />
        <icon height="29" src="www/img/icons/ios/Icon-Small.png" width="29" />
        <icon height="58" src="www/img/icons/ios/Icon-Small-2x.png" width="58" />
        <icon height="50" src="www/img/icons/ios/Icon-Small-50.png" width="50" />
        <icon height="100" src="www/img/icons/ios/Icon-Small-50-2x.png" width="100" />
        <splash height="640" src="www/img/splash/ios/spalsh_320x640.png" width="320" />
        <splash height="768" src="www/img/splash/ios/spalsh_1024x768.png" width="1024" />
        <splash height="800" src="www/img/splash/ios/spalsh_1280x800.png" width="1280" />
        <splash height="1136" src="www/img/splash/ios/splash_640x1136.png" width="640" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="com.borismus.webintent" spec="~1.0.0" />
    <plugin name="com.lampa.startapp" spec="^6.1.6" />
    <plugin name="cordova-plugin-device" spec="^2.0.2" />
    <plugin name="cordova-plugin-globalization" spec="^1.11.0" />
    <plugin name="cordova-plugin-network-information" spec="^2.0.1" />
    <plugin name="cordova-plugin-splashscreen" spec="^5.0.2" />
    <plugin name="cordova-plugin-statusbar" spec="^2.4.2" />
    <plugin name="phonegap-plugin-barcodescanner" spec="^8.0.0">
        <variable name="CAMERA_USAGE_DESCRIPTION" value="To scan barcodes" />
        <variable name="ANDROID_SUPPORT_V4_VERSION" value="27.+" />
    </plugin>
    <engine name="android" spec="^6.3.0" />
</widget>
